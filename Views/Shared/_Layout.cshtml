<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="BerberOto - Berber dükkanları için online randevu platformu. Kolayca randevu alın." />
    <title>@ViewData["Title"] - BerberOto</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Playfair+Display:wght@600;700;800&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar-custom" id="mainNavbar">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <a class="navbar-brand" href="/">
                    <span class="brand-icon"><i class="fa-solid fa-scissors"></i></span>
                    BerberOto
                </a>

                <button class="navbar-toggler d-lg-none" type="button" onclick="toggleMobileMenu()">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="d-none d-lg-flex align-items-center gap-1" id="navLinks">
                    <a class="nav-link" href="/#salons">Salonlar</a>
                    <a class="nav-link" href="/#nasil-calisir">Nasıl Çalışır</a>
                    <a class="nav-link" href="/#iletisim">İletişim</a>
                </div>
            </div>

            <!-- Mobile Menu -->
            <div class="d-lg-none" id="mobileMenu" style="display:none; padding-top:1rem;">
                <div class="d-flex flex-column gap-2">
                    <a class="nav-link" href="/#salons" onclick="closeMobileMenu()">Salonlar</a>
                    <a class="nav-link" href="/#nasil-calisir" onclick="closeMobileMenu()">Nasıl Çalışır</a>
                    <a class="nav-link" href="/#iletisim" onclick="closeMobileMenu()">İletişim</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer-custom">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4 mb-lg-0">
                    <div class="footer-brand">
                        <i class="fa-solid fa-scissors" style="color:var(--accent);"></i> BerberOto
                    </div>
                    <p class="footer-text mt-2">Tek platformda tüm berber dükkanları. Kolayca randevu alın, beklemeyin.</p>
                </div>
                <div class="col-lg-3 col-md-4 mb-4 mb-md-0">
                    <h6 style="color:var(--text-primary); margin-bottom:1rem;">Hızlı Linkler</h6>
                    <ul class="footer-links">
                        <li><a href="/#salons">Salonlar</a></li>
                        <li><a href="/#nasil-calisir">Nasıl Çalışır</a></li>
                        <li><a href="/#iletisim">İletişim</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-4 mb-4 mb-md-0">
                    <h6 style="color:var(--text-primary); margin-bottom:1rem;">Destek</h6>
                    <ul class="footer-links">
                        <li><a href="#">SSS</a></li>
                        <li><a href="/#iletisim">İletişim</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-4">
                    <h6 style="color:var(--text-primary); margin-bottom:1rem;">Sosyal Medya</h6>
                    <div class="d-flex gap-3">
                        <a href="#" style="color:var(--text-secondary); font-size:1.3rem;" class="social-link"><i class="fa-brands fa-instagram"></i></a>
                        <a href="#" style="color:var(--text-secondary); font-size:1.3rem;" class="social-link"><i class="fa-brands fa-facebook"></i></a>
                        <a href="#" style="color:var(--text-secondary); font-size:1.3rem;" class="social-link"><i class="fa-brands fa-twitter"></i></a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                &copy; 2026 BerberOto. Tüm hakları saklıdır.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
