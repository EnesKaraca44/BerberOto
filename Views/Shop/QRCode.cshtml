@model BerberOto.Models.Shop
@{
    ViewData["Title"] = $"QR Kod - {Model.Name}";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QR Kod - @Model.Name</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Playfair+Display:wght@600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/qrcodejs@1.0.0/qrcode.min.js"></script>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: 'Inter', sans-serif;
            background: #0a0a0f;
            color: #f0f0f0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .qr-page {
            max-width: 480px;
            width: 100%;
            text-align: center;
        }

        .qr-card {
            background: linear-gradient(145deg, rgba(26,26,46,0.9), rgba(15,15,26,0.95));
            border: 1px solid rgba(212,165,116,0.2);
            border-radius: 24px;
            padding: 2.5rem 2rem;
            margin-bottom: 1.5rem;
            position: relative;
            overflow: hidden;
        }

        .qr-card::before {
            content: '';
            position: absolute;
            top: 0; left: 0; right: 0;
            height: 4px;
            background: linear-gradient(135deg, #D4A574, #C8956C, #B8845C);
        }

        .shop-logo {
            width: 80px; height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, #D4A574, #C8956C);
            display: flex; align-items: center; justify-content: center;
            margin: 0 auto 1rem;
            font-size: 1.8rem; font-weight: 700;
            color: #0a0a0f;
            font-family: 'Playfair Display', serif;
        }

        .shop-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 0.3rem;
        }

        .shop-subtitle {
            color: #D4A574;
            font-size: 0.9rem;
            margin-bottom: 1.5rem;
        }

        .qr-wrapper {
            background: #ffffff;
            border-radius: 16px;
            padding: 1.2rem;
            display: inline-block;
            margin-bottom: 1.5rem;
            box-shadow: 0 0 40px rgba(212,165,116,0.15);
        }

        #qrcode {
            display: inline-block;
        }

        #qrcode img, #qrcode canvas {
            display: block !important;
        }

        .scan-text {
            color: #D4A574;
            font-weight: 600;
            font-size: 1.1rem;
            margin-bottom: 0.3rem;
        }

        .scan-desc {
            color: #a0a0b8;
            font-size: 0.85rem;
            margin-bottom: 1.5rem;
        }

        .shop-url {
            display: inline-block;
            background: rgba(212,165,116,0.08);
            border: 1px solid rgba(212,165,116,0.2);
            color: #D4A574;
            padding: 0.5rem 1.2rem;
            border-radius: 50px;
            font-size: 0.8rem;
            font-weight: 500;
            word-break: break-all;
        }

        .services-list {
            background: rgba(212,165,116,0.05);
            border: 1px solid rgba(212,165,116,0.1);
            border-radius: 12px;
            padding: 1rem 1.2rem;
            margin-top: 1.5rem;
            text-align: left;
        }

        .services-title {
            color: #D4A574;
            font-size: 0.85rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .services-list ul {
            list-style: none; padding: 0;
        }

        .services-list li {
            color: #a0a0b8;
            font-size: 0.8rem;
            padding: 0.25rem 0;
            display: flex;
            justify-content: space-between;
        }

        .services-list li .price {
            color: #D4A574;
            font-weight: 600;
        }

        /* ACTIONS (hidden when printing) */
        .actions {
            display: flex;
            gap: 0.8rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn-print {
            background: linear-gradient(135deg, #D4A574, #C8956C);
            color: #0a0a0f;
            border: none;
            padding: 0.8rem 1.8rem;
            border-radius: 16px;
            font-weight: 600;
            font-size: 0.9rem;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
        }

        .btn-print:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 30px rgba(212,165,116,0.2);
        }

        .btn-back {
            background: transparent;
            color: #D4A574;
            border: 1.5px solid #D4A574;
            padding: 0.78rem 1.8rem;
            border-radius: 16px;
            font-weight: 600;
            font-size: 0.9rem;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .btn-back:hover {
            background: rgba(212,165,116,0.1);
            transform: translateY(-2px);
        }

        /* PRINT STYLES */
        @@media print {
            body {
                background: #ffffff;
                color: #000000;
                padding: 0;
            }

            .qr-card {
                background: #ffffff;
                border: 2px solid #333;
                box-shadow: none;
            }

            .qr-card::before {
                background: #333;
            }

            .shop-logo {
                background: #333;
                color: #fff;
            }

            .shop-title { color: #000; }
            .shop-subtitle { color: #555; }
            .scan-text { color: #000; }
            .scan-desc { color: #555; }

            .shop-url {
                background: #f5f5f5;
                border-color: #ccc;
                color: #333;
            }

            .services-list {
                background: #f9f9f9;
                border-color: #ddd;
            }

            .services-title { color: #333; }
            .services-list li { color: #555; }
            .services-list li .price { color: #333; }

            .actions { display: none !important; }
        }
    </style>
</head>
<body>
    <div class="qr-page">
        <div class="qr-card">
            <div class="shop-logo">
                @Model.Name.Substring(0, Math.Min(2, Model.Name.Length)).ToUpper()
            </div>
            <h1 class="shop-title">@Model.Name</h1>
            <p class="shop-subtitle">Online Randevu Sistemi</p>

            <div class="qr-wrapper">
                <div id="qrcode"></div>
            </div>

            <p class="scan-text">
                <i class="fa-solid fa-qrcode"></i> QR Kodu Tarayın
            </p>
            <p class="scan-desc">Telefonunuzun kamerasıyla tarayarak hemen randevu alın</p>

            <div class="shop-url" id="shopUrl"></div>

            @if (Model.Services.Any())
            {
                <div class="services-list">
                    <div class="services-title"><i class="fa-solid fa-scissors"></i> Hizmetlerimiz</div>
                    <ul>
                        @foreach (var svc in Model.Services)
                        {
                            <li>
                                <span>@svc.Name</span>
                                <span class="price">@svc.Price.ToString("N0") ₺</span>
                            </li>
                        }
                    </ul>
                </div>
            }
        </div>

        <div class="actions">
            <button class="btn-print" onclick="window.print()">
                <i class="fa-solid fa-print"></i> Yazdır
            </button>
            <a href="/salon/@Model.Slug" class="btn-back">
                <i class="fa-solid fa-arrow-left"></i> Dükkan Sayfası
            </a>
        </div>
    </div>

    <script>
        var shopUrl = window.location.origin + '/salon/@Model.Slug';
        document.getElementById('shopUrl').textContent = shopUrl;

        new QRCode(document.getElementById('qrcode'), {
            text: shopUrl,
            width: 220,
            height: 220,
            colorDark: '#1a1a2e',
            colorLight: '#ffffff',
            correctLevel: QRCode.CorrectLevel.H
        });
    </script>
</body>
</html>
