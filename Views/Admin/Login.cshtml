@{
    Layout = null;
    var shop = ViewBag.Shop as BerberOto.Models.Shop;
    var error = ViewBag.Error as string;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Giriş - @shop?.Name</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Inter', sans-serif;
            background: #0a0a0f;
            color: #f0f0f0;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .login-card {
            width: 100%; max-width: 420px;
            background: linear-gradient(145deg, rgba(26,26,46,0.95), rgba(15,15,26,0.98));
            border: 1px solid rgba(212,165,116,0.15);
            border-radius: 24px;
            padding: 2.5rem;
            text-align: center;
        }
        .login-card::before {
            content: ''; display: block;
            width: 70px; height: 70px; border-radius: 50%;
            background: linear-gradient(135deg, #D4A574, #C8956C);
            margin: 0 auto 1.2rem;
            display: flex; align-items: center; justify-content: center;
            font-size: 1.5rem; color: #0a0a0f;
        }
        .logo-circle {
            width: 70px; height: 70px; border-radius: 50%;
            background: linear-gradient(135deg, #D4A574, #C8956C);
            margin: 0 auto 1.2rem;
            display: flex; align-items: center; justify-content: center;
            font-size: 1.5rem; color: #0a0a0f; font-weight: 700;
        }
        h1 { font-size: 1.5rem; margin-bottom: 0.3rem; }
        .subtitle { color: #a0a0b8; font-size: 0.9rem; margin-bottom: 2rem; }
        .form-group { margin-bottom: 1.2rem; text-align: left; }
        label { display: block; font-size: 0.85rem; color: #a0a0b8; margin-bottom: 0.4rem; font-weight: 500; }
        input[type="password"] {
            width: 100%; padding: 0.8rem 1rem;
            background: rgba(255,255,255,0.05);
            border: 1px solid rgba(212,165,116,0.2);
            border-radius: 12px;
            color: #f0f0f0; font-size: 1rem;
            transition: all 0.3s;
        }
        input[type="password"]:focus {
            outline: none;
            border-color: #D4A574;
            box-shadow: 0 0 15px rgba(212,165,116,0.1);
        }
        .btn-login {
            width: 100%; padding: 0.9rem;
            background: linear-gradient(135deg, #D4A574, #C8956C);
            color: #0a0a0f; border: none; border-radius: 14px;
            font-size: 1rem; font-weight: 600; cursor: pointer;
            transition: all 0.3s;
        }
        .btn-login:hover { transform: translateY(-2px); box-shadow: 0 8px 25px rgba(212,165,116,0.25); }
        .error-msg {
            background: rgba(220,53,69,0.15);
            border: 1px solid rgba(220,53,69,0.3);
            color: #ff6b7a; padding: 0.7rem; border-radius: 10px;
            font-size: 0.85rem; margin-bottom: 1rem;
        }
        .back-link {
            display: inline-block; margin-top: 1.5rem;
            color: #D4A574; text-decoration: none; font-size: 0.85rem;
        }
        .back-link:hover { text-decoration: underline; }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="logo-circle">
            <i class="fa-solid fa-lock"></i>
        </div>
        <h1>Admin Paneli</h1>
        <p class="subtitle">@shop?.Name</p>

        @if (!string.IsNullOrEmpty(error))
        {
            <div class="error-msg"><i class="fa-solid fa-circle-exclamation"></i> @error</div>
        }

        <form method="post" action="/salon/@shop?.Slug/admin">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label>Şifre</label>
                <input type="password" name="password" placeholder="Dükkan şifrenizi girin" required autofocus />
            </div>
            <button type="submit" class="btn-login">
                <i class="fa-solid fa-right-to-bracket"></i> Giriş Yap
            </button>
        </form>
        <a href="/salon/@shop?.Slug" class="back-link"><i class="fa-solid fa-arrow-left"></i> Dükkan Sayfasına Dön</a>
    </div>
</body>
</html>
